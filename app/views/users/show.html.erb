<%- model_class = User -%>
<!-- Contact Section -->
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2><%=t '.title', :default => model_class.model_name.human.titleize %></h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
            	
			<div class="col-lg-4 col-lg-offset-2">
                <p><strong><%= model_class.human_attribute_name(:username) %>:</strong></p>
                <p><strong><%= model_class.human_attribute_name(:email) %>:</strong></p>
            </div>
            <div class="col-lg-4">
                <p><%= @user.username %></p>
                <p><%= @user.email %></p>
            </div>
            
            <div class="col-lg-8 col-lg-offset-2 text-center">
            	<%= link_to t('.back', :default => t("helpers.links.back")),
				              users_path, :class => 'btn btn-default'  %>
				<%= link_to t('.edit', :default => t("helpers.links.edit")),
				              edit_user_path(@user), :class => 'btn btn-default' %>
				<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
				              user_path(@user),
				              :method => 'delete',
				              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
				              :class => 'btn btn-danger' %>
            
            </div>
        </div>
    </div>
</section>